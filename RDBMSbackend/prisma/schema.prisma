generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  password     String
  otp        Int?
  isVerified       Boolean    @default(false)
  selectedInterests Interests[] @relation("UserInterests")
}

model Interests {
  id           Int      @id @default(autoincrement())
  name         String
  users         User[] @relation("UserInterests")
} 